
<div id = "event_list" class = "container">
  <table class="table table-bordered table-striped">
  <h4><strong>All events</strong></h4>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.address %></td>
       
          <td><%= link_to 'Show Details', event, :class => "btn btn-myGreen"  %> </td>
          <td><%= link_to 'Edit', edit_event_path(event), :class => "btn btn-myBlue" %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-myRed" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'New Event', new_event_path, :class => "btn btn-myGrey" %>
 
</div>
